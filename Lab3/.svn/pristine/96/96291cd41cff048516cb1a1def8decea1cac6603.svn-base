.main-container {
    display: flex;
    justify-content: center;
    width: 85%;
    margin: auto;
    padding: 20px;
}
.main-container-item {
    text-align: center;
}
.date-time {
    line-height: 45px;
}
.date-time-time{
    font-size: 72px;
}
.index-list-link{
    display: inline-block;
    height: 27px;
    width: auto;
    padding: 1px 6px;
    text-decoration: none;
    font-size:13px;
    color: black;
    background-color: #8fd8f6;
}
.index-list-link:hover{
    background-color: #054769;
}
.index-list-link:before {
    content: '';
    display:inline-block;
    height: 100%;
    vertical-align: middle;
}